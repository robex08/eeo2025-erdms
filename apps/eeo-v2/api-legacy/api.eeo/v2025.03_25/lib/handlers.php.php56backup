function handle_organizace_update($input, $config, $queries) {
    $token = isset($input['token']) ? $input['token'] : '';
    $request_username = isset($input['username']) ? $input['username'] : '';
    $organizace_id = isset($input['id']) ? (int)$input['id'] : 0;

